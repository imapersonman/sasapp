<script src="/static/js/edit_classes.js"></script>
<script>setInitialRowSize(<%- classes.length - 1 %>)</script>
<div class="panel panel-default scrollable">
    <table class="table table-striped table-condensed table-hover">
        <thead>
            <tr>
                <th>Teacher</th>
                <th>Name</th>
                <th>Room Number</th>
                <th>Period</th>
            </tr>
        </thead>
        <tbody class="editable-list">
            <% for(var c = 0; c < classes.length; c++) { %>
            <tr class_id=<%= classes[c].id %> row_index=<%= c %>>
                <td><%= classes[c].teacher_name %></td>
                <td><input class="form-control" type="text" value=<%- "'" + classes[c].name + "'" %>></td>
                <td><input class="form-control" type="text" value=<%= classes[c].room_num %>></td>
                <td><input class="form-control" type="text" value=<%= classes[c].period %>></td>
                <td>
                    <button onclick="removeRow(this)" style="float: right" type="button" class="btn btn-default btn-sm">
                        <span class="glyphicon glyphicon-minus"></span> Remove
                    </button>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>

<button onclick="addRow()" type="button" class="btn btn-default btn-sm">
    <span class="glyphicon glyphicon-plus"></span> Add
</button>

<button style="float: right" onclick="sendClassChanges()" type="button" class="btn btn-success btn-sm" >
    <span class="glyphicon glyphicon-check"></span> Done
</button>
