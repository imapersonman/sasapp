<script src="/static/js/edit.js"></script>
<script>setInitialRowSize(<%- teachers.length - 1 %>)</script>

<div id="row-template">
    <div field="name"><input class="form-control" type="text" value="Name"></div>
    <div field="email"><input class="form-control" type="text" value="Email"></div>
    <div>Room Number</div>
    <div>School</div>
</div>

<div class="panel panel-default scrollable">
    <table class="table table-striped table-condensed table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>SAS Room Num</th>
                <th>School</th>
            </tr>
        </thead>
        <tbody class="editable-list">
            <% for(var t = 0; t < teachers.length; t++) { %>
            <tr user_id=<%= teachers[t].id %> row_index=<%= t %>>
                <td field="name"><input class="form-control" type="text" value=<%- "'" + teachers[t].name + "'" %>></td>
                <td field="email"><input class="form-control" type="text" value=<%= teachers[t].email %>></td>
                <td><%= teachers[t].room_num %></td>
                <td><%= teachers[t].school_name %></td>
                <td>
                    <button onclick="removeRow(this)" style="float: right" type="button" class="btn btn-default btn-sm">
                        <span class="glyphicon glyphicon-minus"></span> Remove
                    </button>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>

<button onclick="addRow()" type="button" class="btn btn-default btn-sm">
    <span class="glyphicon glyphicon-plus"></span> Add
</button>

<button style="float: right" onclick="sendChanges('teachers', '/user/teachers')" type="button" class="btn btn-success btn-sm" >
    <span class="glyphicon glyphicon-check"></span> Done
</button>
